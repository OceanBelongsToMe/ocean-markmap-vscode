{
  "name": "markmap-vscode",
  "version": "0.0.15",
  "description": "Visualize your markdown in VSCode",
  "author": "Gerald <gera2ld@live.com>",
  "license": "MIT",
  "displayName": "Markmap",
  "publisher": "gera2ld",
  "icon": "assets/favicon.png",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "markmap",
    "mindmap",
    "markdown"
  ],
  "activationEvents": [
    "onCommand:markmap-vscode.open",
    "onCustomEditor:markmap-vscode.markmap",
    "onCustomEditor:markmap-vscode.markmap.default"
  ],
  "contributes": {
    "commands": [
      {
        "command": "markmap-vscode.open",
        "title": "Open as markmap",
        "icon": {
          "light": "./assets/light.svg",
          "dark": "./assets/dark.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "markmap-vscode.markmap",
        "displayName": "Markmap",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "when": "editorLangId == markdown",
          "command": "markmap-vscode.open"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "markmap-vscode.open",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == markdown && activeEditor == workbench.editors.files.textFileEditor",
          "command": "markmap-vscode.open",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markmap",
      "properties": {
        "markmap.defaultOptions": {
          "type": "string",
          "default": "",
          "markdownDescription": "Default options for Markmap, for example `{\"color\":\"#2980b9\",\"embedAssets\":false}`",
          "editPresentation": "multilineText"
        },
        "markmap.customCSS": {
          "type": "string",
          "default": "",
          "markdownDescription": "Custom CSS for Markmap, please don't change this if you are not sure what you are doing. You can test your styles on <https://markmap.js.org> since the SVGs shares the same structure.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "yarn compile",
    "dev": "gulp dev",
    "build": "gulp build",
    "compile": "yarn lint && yarn build",
    "lint": "eslint --ext .ts,.tsx .",
    "transform": "locky yarn yarn"
  },
  "repository": "https://github.com/gera2ld/markmap-vscode",
  "main": "dist/extension.js",
  "browser": "dist/extension.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/runtime": "^7.18.3",
    "@gera2ld/locky": "^0.1.1",
    "@gera2ld/plaid": "~2.5.2",
    "@gera2ld/plaid-common-ts": "~2.5.1",
    "@gera2ld/plaid-rollup": "~2.5.0",
    "@types/glob": "^7.2.0",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^17.0.30",
    "@types/vscode": "~1.58.0",
    "d3": "^7.4.4",
    "del": "^6.1.1",
    "fancy-log": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "husky": "^8.0.1",
    "lodash.debounce": "^4.0.8",
    "markmap-lib": "^0.13.5",
    "markmap-toolbar": "^0.13.5",
    "markmap-view": "^0.13.5",
    "vscode-uri": "^3.0.3"
  }
}
